<%= render partial: 'shared/mediator', locals: { klass: 'BookCategories',
                                                 list_of_klass: 'Hello Admin TheBook',
                                                 list_of_klass_description: 'Enjoy your concentrated work' } %>

<%= link_to "New book category", new_book_category_path %>

<br>
<table class="table" style="width: 45%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Ordering</th>
      <th colspan="3" style="width: 10%"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.ordering %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h6>Item per page: <%= @categories.count %> / <%= BookCategory.count %></h6>