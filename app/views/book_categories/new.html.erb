<!DOCTYPE html>
<html>
<head>
  <title>New Book Category</title>
</head>
<body>
  <div class="container">
    <%= form_with(model: @category) do |form| %>
      <h1 class="page-title">New Book Category</h1>

      <div class="form-field">
        <%= form.label :name, class: 'label' %>
        <%= form.text_field :name, class: 'input', required: true %>
      </div>

      <div class="form-field">
        <%= form.label :ordering, class: 'label' %>
        <%= form.select :ordering, BookCategory.orderings.keys, { selected: 'normal' }, class: 'select', required: true %>
      </div>

      <%= render partial: 'shared/error_messages', locals: { object: @category } %>

      <div class="form-actions">
        <%= form.submit 'Create Category', class: 'button' %>
      </div>
    <% end %>

    <script>
      toastr.success('Category created successfully!')
    </script>

    <div class="back-link">
      <%= link_to "Back to list categories", book_categories_path %>
    </div>
  </div>
</body>
</html>
